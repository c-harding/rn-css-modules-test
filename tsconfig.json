{
  "compilerOptions": {
    "lib": ["es2019"],
    "target": "es6",
    "rootDir": ".",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react-native",
    "typeRoots": ["typings.d.ts"],
    "experimentalDecorators": true
  },
  "include": ["App.ts", "app/**/*.ts"],
  "exclude": ["node_modules/**/*.ts"]
}
